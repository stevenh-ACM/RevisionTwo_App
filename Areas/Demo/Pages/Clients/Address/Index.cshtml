@page
@model RevisionTwo_App.Areas.Demo.Pages.Clients.Address.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Address_App[0].AddressLine1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address_App[0].AddressLine2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address_App[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address_App[0].Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address_App[0].PostalCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address_App[0].State)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Address_App) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AddressLine1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddressLine2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
