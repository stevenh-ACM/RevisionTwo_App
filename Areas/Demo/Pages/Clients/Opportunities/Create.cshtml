@page
@model CreateModel

@{
    ViewData["Title"] = "Opportunity";
    Layout = "~/Pages/Shared/_Layout.cshtml";
    var date = @DateTime.Now.TimeOfDay;
}

<h1>Create</h1>

<h4>Opportunity</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OP.OpportunityID" class="control-label"></label>
                <input asp-for="OP.OpportunityID" class="form-control" placeholder="<NEW>" value="<NEW>" readonly/>
                <span asp-validation-for="OP.OpportunityID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OP.Subject" class="control-label"></label>
                <input asp-for="OP.Subject" class="form-control" />
                <span asp-validation-for="OP.Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OP.Status" class="control-label"></label>
                @Html.DropDownListFor(model => model.combo_Boxes.Opportunity_Statuses, Model.combo_Boxes.ComboBox_Opportunity_Statuses, "--Select One--")
                <span asp-validation-for="OP.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OP.Stage" class="control-label"></label>
                @Html.DropDownListFor(model => model.combo_Boxes.Opportuny_Stages, Model.combo_Boxes.ComboBox_Opportunity_Stages, "--Select One--")
                <span asp-validation-for="OP.Stage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OP.CurrencyID" class="control-label"></label>
                <input asp-for="OP.CurrencyID" class="form-control" placeholder="USD" value="USD"/>
                <span asp-validation-for="OP.CurrencyID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OP.Total" class="control-label"></label>
                <input asp-for="OP.Total" class="form-control" />
                <span asp-validation-for="OP.Total" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OP.ClassID" class="control-label"></label>
                <input asp-for="OP.ClassID" class="form-control" required/>
                <span asp-validation-for="OP.ClassID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OP.Owner" class="control-label"></label>
                <input asp-for="OP.Owner" class="form-control" />
                <span asp-validation-for="OP.Owner" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OP.ContactID" class="control-label"></label>
                <input asp-for="OP.ContactID" class="form-control" value="<NEW>"/>
                <span asp-validation-for="OP.ContactID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OP.ContactDisplayName" class="control-label"></label>
                <input asp-for="OP.ContactDisplayName" class="form-control" />
                <span asp-validation-for="OP.ContactDisplayName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OP.BusinessAccount" class="control-label"></label>
                <input asp-for="OP.BusinessAccount" class="form-control" required/>
                <span asp-validation-for="OP.BusinessAccount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OP.LastModifiedDateTime" class="control-label"></label>
                <input asp-for="OP.LastModifiedDateTime" class="form-control" value=date required/>
                <span asp-validation-for="OP.LastModifiedDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" /><a asp-page="Index"> | Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
