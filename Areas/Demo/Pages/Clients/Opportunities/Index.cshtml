@page
@model RevisionTwo_App.Areas.Demo.Pages.Clients.Opportunities.IndexModel

@{
    ViewData["Title"] = "Opportunities";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="p-2"></div>
<h4 class="align-text-top text-muted">@ViewData["Title"]</h4><hr/>
<p>
    <a asp-page="Create"><i class="bi bi-plus-square" title="new"></i></a>&nbsp;&nbsp;&nbsp;<a asp-page="/Home/Index"><i class="bi bi-house" title="Demo Home">
            </i></a><img src="~/images/sales-order-icon-24.jpg" class="img-fluid" style="float:right;height:auto; width:100px;" title="Sales Orders"/>
</p>

<form method="post">
    <input type="text" class="datepicker" id="FromDate" name="FromDate" placeholder="From Date"/>&nbsp;-&nbsp;
    <input type="text" class="datepicker" id="ToDate" name="ToDate" placeholder="To Date" value="@Model.ToDate.ToString("d")"/>
    <input type="submit" value="Filter" asp-page-handler="Submit"/>
</form>

<div class="table-responsive-sm p-2">
    <table class="table table-striped table-hover table-sm">
        <thead style="white-space: nowrap; width:80px;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OP[0].OpportunityID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OP[0].Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OP[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OP[0].Stage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OP[0].CurrencyID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OP[0].Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OP[0].ClassID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OP[0].Owner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OP[0].ContactID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OP[0].ContactDisplayName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OP[0].BusinessAccount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OP[0].LastModifiedDateTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.OP) {
        <tr>
            <input type="hidden" id="OP.Id" name="OP.Id" value="OP.Id"/>
            <td>
                @Html.DisplayFor(modelItem => item.OpportunityID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrencyID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClassID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Owner)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactDisplayName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BusinessAccount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastModifiedDateTime)
            </td>
            <td>
                <span style="white-space: nowrap">
                    <a asp-page="./Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square" title="Edit"></i></a> |
                    <a asp-page="./Details" asp-route-id="@item.Id"><i class="bi bi-view-list" title="Details"></i></a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id"><i class="bi bi-trash" title="Delete"></i></a>
                </span>
            </td>
        </tr>
    }
    </tbody>
</table>
</div>
@section Scripts
{
    <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.min.js" integrity="sha256-eTyxS0rkjpLEo16uXTS0uVCS4815lc40K2iVpWDvdSY=" crossorigin="anonymous"></script>
    <script type="text/javascript" src="\js\datePicker.js"></script>
}
