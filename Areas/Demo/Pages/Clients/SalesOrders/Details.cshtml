@page
@model RevisionTwo_App.Areas.Demo.Pages.SalesOrders.DetailsModel
@{
    ViewData["Title"] = "Sales Order Details";
}
<h4 class="align-text-top text-muted">@ViewData["Title"]</h4>

<div>
    <h4>Sales Orders held Locally</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SalesOrder.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SalesOrder.Status.Value)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SalesOrder.Approved)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SalesOrder.Approved.Value)
