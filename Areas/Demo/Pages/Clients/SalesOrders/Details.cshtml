        <dd class="col-sm-10">            
            @Html.DisplayFor(model => model.SalesOrder.Totals.UnbilledAmount.Value)
        </dd>
        <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.SalesOrder.Totals.UnpaidBalance)
        </dt>        
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SalesOrder.Totals.UnpaidBalance.Value)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-orderNbr="@Model.SalesOrder.OrderNbr.Value"><i class="bi bi-pencil-square" title="Edit"></i></a> |
