            @Html.DisplayFor(model => model.SalesOrder.ContactID.Value)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SalesOrder.CustomerID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SalesOrder.CustomerID.Value)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SalesOrder.CustomerOrder)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SalesOrder.CustomerOrder.Value)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SalesOrder.Date)
        </dt>
        <dd class="col-sm-10">
            @Convert.ToDateTime(Model.SalesOrder.Date.Value).ToString("yyyy/MM/dd")
