        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SalesOrder.OrderedQty.Value)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SalesOrder.OrderNbr)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SalesOrder.OrderNbr.Value)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SalesOrder.OrderTotal)
        </dt>
        <dd class="col-sm-10">
            $@Html.DisplayFor(model => model.SalesOrder.OrderTotal.Value)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SalesOrder.OrderType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SalesOrder.OrderType.Value)
        </dd>
        <dd></dd><hr/>
        @if(Model.SalesOrderDetails is not null)
        {
            @foreach(var detail in Model.SalesOrderDetails)
            {
             <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SalesOrderDetails[0].InventoryID)
            </dt><hr/>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelDetail => detail.InventoryID.Value)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SalesOrderDetails[0].OrderQty)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelDetail => detail.OrderQty.Value)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SalesOrderDetails[0].ShipOn)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelDetail => detail.ShipOn.Value)
            </dd>
            <dt class="col-sm-2">
               @Html.DisplayNameFor(model => model.SalesOrderDetails[0].Amount)
            </dt> 
            <dd class="col-sm-10">
                $@Html.DisplayFor(modelDetail => detail.Amount.Value)
            </dd>
            <dt class="col-sm-2">
               @Html.DisplayNameFor(model => model.SalesOrderDetails[0].Amount)
            </dt> 
            <dd class="col-sm-10">
                $@Html.DisplayFor(modelDetail => detail.Amount.Value)
            </dd>
            }
        } 
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SalesOrder.ShipToAddress)
        </dt><hr/>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SalesOrder.ShipToAddress.AddressLine1)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SalesOrder.ShipToAddress.AddressLine1)
        </dd>
