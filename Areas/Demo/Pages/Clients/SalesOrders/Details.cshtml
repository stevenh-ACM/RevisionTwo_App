            @Html.DisplayNameFor(model => model.SalesOrder.ShipToAddress.State)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SalesOrder.ShipToAddress.State)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SalesOrder.ShipToAddress.PostalCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SalesOrder.ShipToAddress.PostalCode)
        </dd>
        <dd></dd><hr/>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SalesOrder.Totals)
        </dt><hr/>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SalesOrder.Totals.DiscountTotal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SalesOrder.Totals.DiscountTotal.Value)
        </dd>
