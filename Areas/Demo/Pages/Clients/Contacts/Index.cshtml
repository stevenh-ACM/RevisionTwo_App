@page
@model IndexModel

@{
    ViewData["Title"] = "Contacts";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<div class="p-2"></div>
<h4 class="align-text-top text-muted">@ViewData["Title"]</h4><hr/>
<p>
    <a asp-page="Create"><i class="bi bi-plus-square" title="new"></i></a>&nbsp;&nbsp;&nbsp;<a asp-page="/Home/Index"><i class="bi bi-house" title="Demo Home">
        </i></a><img src="~/images/contacts.jpg" style="float:right;height:auto; width:80px;"/>
</p>

<form method="post">
    <input type="text" class="datepicker" id="FromDate" name="FromDate" placeholder="From Date"/>&nbsp;-&nbsp;
    <input type="text" class="datepicker" id="ToDate" name="ToDate" placeholder="To Date" value="@Model.ToDate.ToString("d")"/>
    <input type="submit" value="Filter" asp-page-handler="Submit"/>
</form>

<div class="table-responsive-sm p-2">
    <table class="table table-striped table-hover table-sm">
        <thead style="white-space: nowrap; width:80px;">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CO[0].ContactID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CO[0].DisplayName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CO[0].BusinessAccount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CO[0].JobTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CO[0].Owner)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CO[0].CompanyName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CO[0].ContactClass)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CO[0].Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CO[0].Phone1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CO[0].LastModifiedDateTime)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody style="white-space: nowrap; width:80px;">
    @foreach (var item in Model.CO) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DisplayName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BusinessAccount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JobTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Owner)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactClass)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastModifiedDateTime)
                </td>
                <td>
                    <span style="white-space: nowrap">
                        <a asp-page="./Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square" title="Edit"></i></a> |
                        <a asp-page="./Details" asp-route-id="@item.Id"><i class="bi bi-view-list" title="Details"></i></a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id"><i class="bi bi-trash" title="Delete"></i></a>
                    </span>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
