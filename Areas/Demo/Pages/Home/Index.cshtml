@page
@model IndexModel
@{
    ViewData["Title"] = "Demo Home";
}

<div class="container-fluid p-4">
    <div class="card shadow" id="mycard">
        <picture style="opacity:1.2;">
            <source media="(min-width:960px)" srcset="../img/bg_homepage.jpg">
            <source media="(min-width:768px)" srcset="../img/airplane7.jpg">
            <img class="card-img" id="mybanner" src="../img/airplane5az.jpg" style="height:27em; object-fit:cover">
        </picture>
        <div class="card-img-overlay">
            <div class="card-body p-2">
                <h1 class="card-titled">@ViewData["Title"]</h1>
                <br /><br />
                <p>
                    <a class="btn btn-primary" asp-area="Demo" asp-page="/Credentials/Index"><i class="bi bi-person-workspace"></i> Demo Setup &raquo;</a>&nbsp;&nbsp;
                    <a class="btn btn-primary" asp-area="" asp-page="/Index"><i class="bi bi-arrow-return-left"></i></a>
                </p>
            </div>
            <div class="card-footer bg-transparent border-0">
                <br /><br /><br /><br />
                <p class="card-texts text-wrap">Acumatica ERP information required to start. <br />Edit and check off the Demo credentials you wish to use...</p>
            </div>
        </div>
    </div>
</div>

